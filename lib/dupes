#!/usr/bin/env node

'use strict';

var cli = require('commander');
var rek = require('rekuire');
var version = rek('package.json').version;
var dupes_cli = rek('dupes-cli');

cli
  .version(version)
  .usage('<directory> [-eqvw]')
  .option('-e, --include-empty', 'include empty files')
  .option('-q, --quiet', 'do not print normal output')
  .option('-v, --verbose', 'print extra output')
  .option('-w, --write', 'write results file inside target folder')
  .parse(process.argv);


var targets = process.argv.slice(2).filter(function(v) { return v.indexOf('-') != 0; });
if (targets.length >= 2) {
  return dupes_cli.logger.error('Too many arguments!! Besides flags, there can be only one!');
}

dupes_cli.findDupes({
  targetPath: targets[0],
  includeEmpty: cli.includeEmpty,
  verbosity: cli.quiet ? 0 : cli.verbose ? 2 : 1,
  write: cli.write
});
