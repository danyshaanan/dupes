#!/usr/bin/env node

'use strict';

var cli = require('commander');
var rek = require('rekuire');
var version = rek('package.json').version;
var dupes_read_cli = rek('dupes-read-cli');
var dupes_cli = rek('dupes-cli');

cli
  .version(version)
  .usage('[filepath] [-hVj]')
  .option('-j, --show-json', 'show full json result')
  .parse(process.argv);


var targets = process.argv.slice(2).filter(function(v) { return v.indexOf('-') != 0; });
if (targets.length >= 2) {
  return dupes_cli.logger.error('Too many arguments!! Besides flags, there can be only one!'); //TODO: this should be called not from dupes_cli
}

dupes_read_cli.show({
  target: targets[0],
  showJson: cli.showJson
});
